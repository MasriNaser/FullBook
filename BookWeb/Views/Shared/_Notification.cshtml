@*Popups when the user create a new book*@

@if (TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script> 
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
